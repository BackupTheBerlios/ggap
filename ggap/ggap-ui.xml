<!-- -*- Mode: XML; indent-tabs-mode: nil; c-basic-offset: 2 -*- -->
<!-- This is the XML file defining menus and toolbars of the program.
     To add an action add <item action="YourAction"> under desired menu/toolbar,
     where 'YourAction' is the name of action defined in 'actions' file.
     WARNING: changing/moving around 'placeholder' items may break menu
     items added by plugins; moving around menus is also not recommended.
     (but adding new items is completely safe).
     -->
<ui>

<object name="Editor">

  <!-- Editor menubar -->
  <widget name="Menubar">

    <item name="File" label="_File">
      <separator/>
      <item action="NewTab"/>
      <separator/>
      <item action="Open"/>
      <item action="OpenRecent"/>
      <item action="Save"/>
      <item action="SaveAs"/>
      <separator/>
      <item action="Reload"/>
      <separator/>
      <item action="Close"/>
      <item action="CloseAll"/>
      <separator/>
      <item action="Quit"/>
      <separator/>
    </item>

    <item name="Edit" label="_Edit">
      <separator/>
      <item action="Undo"/>
      <item action="Redo"/>
      <separator/>
      <item action="Cut"/>
      <item action="Copy"/>
      <item action="Paste"/>
      <item action="Delete"/>
      <separator/>
      <item action="SelectAll"/>
      <separator/>
    </item>

    <item name="Search" label="_Search">
      <separator/>
      <item action="Find"/>
      <item action="FindNext"/>
      <item action="FindPrevious"/>
      <item action="Replace"/>
      <separator/>
      <item action="GoToLine"/>
      <separator/>
    </item>

    <item name="View" label="_View">
      <separator/>
      <item action="PreviousTab"/>
      <item action="NextTab"/>
      <separator/>
      <item action="LanguageMenu"/>
      <separator/>
      <item action="FocusDoc"/>
      <separator/>
    </item>

    <item name="GAP" label="_GAP">
      <separator/>
      <item action="SendFile"/>
      <item action="SendSelection"/>
      <separator/>
    </item>

    <item name="Tools" label="_Tools">
      <separator/>
      <placeholder name="EditorUserMenu"/>
      <separator/>
      <placeholder name="ToolsMenu"/>
      <separator/>
      <item action="StopJob"/>
      <separator/>
    </item>

    <item name="Settings" label="_Settings">
      <separator/>
      <item action="ShowToolbar"/>
      <item action="ToolbarStyle"/>
      <separator/>
      <item action="ConfigureShortcuts"/>
      <separator/>
      <item action="Preferences"/>
      <separator/>
    </item>

    <item name="Help" label="_Help">
      <item action="GapDoc"/>
      <separator/>
      <item action="About"/>
      <separator/>
    </item>

  </widget>

  <!-- Editor toolbar -->
  <widget name="Toolbar">
    <separator/>
    <item action="NewTab"/>
    <separator/>
    <item action="Open"/>
    <item action="Save"/>
    <separator/>
    <item action="Undo"/>
    <item action="Redo"/>
    <separator/>
    <item action="Cut"/>
    <item action="Copy"/>
    <item action="Paste"/>
    <separator/>

    <item action="Find"/>
    <item action="Replace"/>

    <separator/>
    <placeholder name="BuildToolbar">
      <item action="StopJob"/>
    </placeholder>
    <separator/>

  </widget>

</object>

<object name="Terminal">

  <!-- GAP window menubar -->
  <widget name="Menubar">

    <item name="File" label="_File">
      <separator/>
      <item action="SwitchToEditor"/>
      <item action="OpenFile"/>
      <separator/>
      <item action="SaveSelection"/>
      <separator/>
      <item action="Quit"/>
      <separator/>
    </item>

    <item name="Edit" label="E_dit">
      <separator/>
      <!--
      <item name="CopyLastOutput" action="CopyLastOutput"/>
      -->
      <item action="Copy"/>
      <item action="Paste"/>
      <separator/>
      <item action="SelectAll"/>
      <separator/>
    </item>

    <item name="GAP" label="_GAP">
      <separator/>
      <item action="GAPRead"/>
      <separator/>
      <item action="Restart"/>
      <separator/>
    </item>

    <item name="Tools" label="_Tools">
      <separator/>
      <placeholder name="TerminalUserMenu"/>
      <separator/>
    </item>

    <item name="Settings" label="_Settings">
      <separator/>
      <item action="ShowToolbar"/>
      <item action="ToolbarStyle"/>
      <separator/>
      <item action="ConfigureShortcuts"/>
      <separator/>
      <item action="Preferences"/>
      <separator/>
    </item>

    <item name="Help" label="_Help">
      <item action="GapDoc"/>
      <separator/>
      <item action="About"/>
      <separator/>
    </item>

  </widget>

  <!-- GAP window toolbar -->
  <widget name="Toolbar">
    <separator/>
    <item action="Copy"/>
    <item action="Paste"/>
    <separator/>
    <item action="Preferences"/>
    <separator/>
    <item action="Restart"/>
    <separator/>
  </widget>

</object>

</ui>
