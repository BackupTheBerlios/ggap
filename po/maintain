#!/bin/sh

for f in pot dist; do if test ! -e $f; then ln -s maintain $f; fi; done

case `basename $0` in
    pot)
        args="--gettext-package=ggap -p"
        ;;
    dist)
        args="--gettext-package=ggap -d"
        ;;
    *)
        args="--gettext-package=ggap -m"
        ;;
esac

exec intltool-update $args $*
