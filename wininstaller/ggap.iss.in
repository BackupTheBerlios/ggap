[Setup]
AppName=GGAP
AppVerName=GGAP @GGAP_VERSION_UNQUOTED@
AppPublisher=Yevgen Muntyan
AppPublisherURL=http://ggap.sourceforge.net/
AppSupportURL=http://ggap.sourceforge.net/
AppUpdatesURL=http://ggap.sourceforge.net/
DefaultDirName={pf}\GGAP
DefaultGroupName=GGAP
AllowNoIcons=yes
; LicenseFile=C:\ggap\license.txt
Compression=lzma
SolidCompression=yes

[Tasks]
Name: desktopicon; Description: {cm:CreateDesktopIcon}; GroupDescription: {cm:AdditionalIcons}; Flags: unchecked
Name: quicklaunchicon; Description: {cm:CreateQuickLaunchIcon}; GroupDescription: {cm:AdditionalIcons}; Flags: unchecked

[Files]
Source: C:\ggap\*; DestDir: {app}; Flags: ignoreversion recursesubdirs
; NOTE: Don't use "Flags: ignoreversion" on any shared system files

[Icons]
Name: {group}\GGAP; Filename: {app}\bin\ggap.exe; Tasks: 
Name: {group}\{cm:UninstallProgram,GGAP}; Filename: {uninstallexe}
Name: {userdesktop}\GGAP; Filename: {app}\bin\ggap.exe; Tasks: desktopicon
Name: {userappdata}\Microsoft\Internet Explorer\Quick Launch\GGAP; Filename: {app}\bin\ggap.exe; Tasks: quicklaunchicon
Name: {app}\GGAP; Filename: {app}\bin\ggap.exe

[Run]
Filename: {app}\bin\ggap.exe; Description: {cm:LaunchProgram,GGAP}; Flags: nowait postinstall skipifsilent

[UninstallDelete]
Name: {app}\bin\Lib\*.pyc; Type: files
Name: {app}\bin\Lib\encodings\*.pyc; Type: files
Name: {app}\bin\Lib\site-packages\cairo\*.pyc; Type: files
Name: {app}\lib\ggap\plugins\lib\*.pyc; Type: files
Name: {app}\bin\Lib\site-packages\gobject\*.pyc; Type: files
Name: {app}\bin\Lib\site-packages\gtk\*.pyc; Type: files
Name: {app}\lib\ggap\plugins\lib\medit\*.pyc; Type: files
